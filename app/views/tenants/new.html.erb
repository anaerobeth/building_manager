  <%= form_for @tenant do |f| %>

    <% if @tenant.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@tenant.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
          <% @tenant.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
    </div>

    <div class="field form-group">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
    </div>

    <div class="field form-group">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>

    <div class="field form-group">
      <%= f.label :building_id %><br />
      <%= f.collection_select :building_id, Building.all, :id, :street_address, include_blank: true %>
    </div>

    <div class="actions">
      <%= f.submit 'Record', method: "post", class: "btn btn-default" %>
    </div>

  <% end %>
