<%= notice %></p>

<h1>List of tenants</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @tenants.each do |tenant| %>
      <tr class="tenant_<%= tenant.id %>">
        <td><%= tenant.first_name %></td>
        <td><%= tenant.last_name %></td>
        <td><%= tenant.email %></td>
        <td><%= link_to 'Delete', tenant, method: :delete, data: { confirm: 'Are you sure you want to delete this tenant?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New tenant', new_tenant_path %>
