<h1>List of tenants</h1>

  <% @tenants.each do |tenant| %>
    <ul class="tenant_<%= tenant.id %>">
      <li><%= tenant.first_name + ' ' + tenant.last_name %></li>
      <li><%= tenant.email %></li>
      <li><%= link_to 'Delete', tenant, method: :delete, data: { confirm: 'Are you sure you want to delete this tenant?' } %></li>
    </ul>
  <% end %>
  <br>

<h4><%= link_to 'Add a new tenant', new_tenant_path %></h4>
