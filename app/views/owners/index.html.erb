<h1>Listing Owners</h1>

  <% @owners.each do |owner| %>
  <div>
    <ul class='main'>
      <li><%= owner.first_name  + ' ' + owner.last_name %></li>
      <li><%= owner.email %></li>
      <li><%= button_to 'Delete', owner, method: :delete, data: { confirm: 'Are you sure you want to delete this owner?' } %></li>
    </ul>
  </div>
    <br />
  <% end %>

<br />

<h4><%= link_to 'Add a new owner', new_owner_path %></h4>
